{
  "name": "gloriam",
  "version": "1.0.0",
  "description": "Ad Gloriam Et Imperium wrapper game+comic",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && open-cli http://localhost:8080/index.html --background && http-server dist -d -g -i -p 8080 -c-1",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --require @babel/register --timeout 99999",
    "build": "webpack && terser --compress --mangle -o dist/main.min.js -- dist/main.js",
    "watch": "webpack-dev-server --progress"
  },
  "repository": {
    "type": "git",
    "url": "github.com/benjamin-t-brown/gloriam.git"
  },
  "keywords": [
    "game"
  ],
  "author": "Benjamin Brown",
  "license": "ISC",
  "babel": {
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ],
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": "last 1 chrome versions"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "open-cli": "^5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dom-factories": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^3.10.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "terser": "^4.0.0",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.7.2"
  }
}
